@{
    ViewBag.Title = "Contact";
}

<div class="row" style="z-index:5;position:relative;padding:25px;">
    <!-- left column -->
    <div class="col-sm-6">
        <!-- general form elements -->
        <div class="box box-primary center-block">
            <div class="box-header with-border">
                <h3 class="box-title">Contact Us</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            @using (Html.BeginForm("Contact", "Home", FormMethod.Post))
            {
                <div class="box-body">
                    <address>
                        Level 5 Steve Biko Building, Upper Campus<br />
                        University of Cape Town, Cape Town, 7700<br />
                        South Africa<br/>
                        <abbr title="Phone">P:</abbr>
                        +27.79.364.2185
                    </address>

                    <address>
                        <strong>Support:</strong>   <a href="mailto:support@wefix.co.za">support@wefix.co.za</a><br />
                        <strong>Developer:</strong> <a href="mailto:alistair.bowendavies@gmail.com">alistair.bowendavies@gmail.com</a>
                    </address>
                    <div class="form-group">
                        <label for="Email">Email address</label>
                        <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="Subject">Password</label>
                        <input type="text" class="form-control" id="Subject" name="Subject" placeholder="Enter Subject">
                    </div>
                    <div class="form-group">
                        <label for="Body">Message</label>
                        <textarea id="Body" name="Body" class="form-control" style="width:100%;"></textarea>
                    </div>
                    <label>@ViewBag.Result</label>                   
                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            }
        </div>
        <!-- /.box -->
    </div>
    <div class="col-sm-6">
        <div class="box box-primary center-block">
            <div class="box-header with-border">
                <h3 class="box-title">Location</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
           
                <div class="box-body">
                    <div id="map1" style="width:100%;height:350px;"></div>    
                </div>
                <!-- /.box-body -->

                <div class="box-footer">
                </div>            
        </div>
        <!-- /.box -->
    </div>
</div>
