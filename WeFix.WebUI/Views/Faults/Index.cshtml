@model IEnumerable<WeFix.Domain.Entities.Fault>

<section class="panel" style="padding-top:50px; padding-bottom:50px;">
    <div class="panel-heading">
        <h3>Index</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>
                    Fault ID
                </th>
                <th>
                    User
                </th>
                <th>
                    Date Created
                </th>
                <th>
                    Latitude
                </th>
                <th>
                    Longitude
                </th>
                <th>
                    Category
                </th>
                <th>
                    Severity
                </th>
                <th>
                    Image
                </th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.FaultId.ToString(), "Edit", new { id = item.FaultId }, new { @class = "btn btn-default center-block" })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PublicUser.User.FirstName) @Html.DisplayFor(modelItem => item.PublicUser.User.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreated)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Latitude)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Longitude)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Severity.Level)
                    </td>
                    <td>
                        @if (item.ImageURL != null)
                        {
                            <img alt="@item.FaultId" src="@item.ImageURL" width="150" height="150"/>
                                 }

                    </td>
                    <td>
                        @Html.ActionLink("Chat", "Chat", "Chat", new { id = item.FaultId }, new { @class = "btn btn-success" })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", new { id = item.FaultId }, new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add a new fault", "Create", null, new { @class = "btn btn-default" })
    </div>
</section>