@model WeFix.Domain.Entities.DepartmentManager

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLTELayout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Department Manager</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DepartmentManagerId)

        <div class="form-group">
            <label for="UserDrop" class="col-sm-2 control-label">User</label>
            <div class="col-sm-10">
                @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control", @style="UserDrop" })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="DepartmentText" class="col-sm-2 control-label">Department</label>
            <div class="col-sm-10">
                @Html.DropDownList("DepartmentId", null, htmlAttributes: new { @class = "form-control",@id="DepartmentText" })
                @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Position, htmlAttributes: new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Management","Organisations",null,new { @class="btn btn-flat btn-guardian" })
</div>
